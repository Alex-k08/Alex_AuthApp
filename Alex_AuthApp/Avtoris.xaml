<Page x:Class="Alex_AuthApp.Avtoris"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Alex_AuthApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Avtoris">

    <StackPanel>
        <Label Content="Пароль"></Label>
        <TextBox x:Name="Pass"></TextBox>
        <Label Content="Логин"></Label>
        <TextBox x:Name="Login"></TextBox>
        <Label Content="Потвторный пароль"></Label>
        <TextBox x:Name="Povtpass"></TextBox>
        <Button Content="Зарегестрироваться" Click="Button_Click"></Button>
    </StackPanel>
</Page>
